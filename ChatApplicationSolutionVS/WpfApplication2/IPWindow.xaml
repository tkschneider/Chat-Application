<Window x:Class="WpfApplication2.IPWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter IP" Height="143" Width="300" Closing="OnIPWindowClose">
    <Grid>
        <StackPanel x:Name="IPWindow1" Margin="0,10,0,10">
            <Grid VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0, 20, 20, 15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                
            <TextBox x:Name="IPBox" Text="" Width="100" Height="22" Grid.Column="1"></TextBox>
                <Label> Enter Server IP Address </Label>
            </Grid>
            <Button x:Name="okButton" Content="Ok" VerticalAlignment="Bottom" HorizontalAlignment="Center"  Width="70" Click="IPButtonClicked"></Button>
        </StackPanel>
        
    </Grid>
</Window>
